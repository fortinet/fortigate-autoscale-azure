{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "3.3.1.0",
    "parameters": {
        "ExtraSubnetAddressRanges": {
            "type": "array",
            "defaultValue": []
        },
        "ExtraSubnetNames": {
            "type": "array",
            "defaultValue": []
        },
        "Subnet1AddressRange": {
            "type": "String"
        },
        "Subnet1Name": {
            "type": "String"
        },
        "UniqueResourceNamePrefix": {
            "type": "String"
        },
        "VnetAddressSpace": {
            "type": "String"
        },
        "VnetName": {
            "type": "String"
        }
    },
    "variables": {
        "cmdDeassociateNSGFromSubnet1": "[concat('az network vnet subnet update -g ', resourceGroup().name, ' -n ', parameters('Subnet1Name'), ' --vnet-name ', variables('vNetName'),' --remove networkSecurityGroup', ';')]",
        "cmdDeassociateNSGFromExtraSubnets": {
            "copy": [
                {
                    "name": "iterations",
                    "count": "[variables('extraSubnetCount')]",
                    "input": "[concat('az network vnet subnet update -g ', resourceGroup().name, ' -n ', parameters('ExtraSubnetNames')[copyIndex('iterations')], ' --vnet-name ', variables('vNetName'),' --remove networkSecurityGroup', ';')]"
                }
            ]
        },
        "cmdDeleteAll": "[concat('az account set -s ', subscription().subscriptionId, ';', variables('cmdDeassociateNSGFromSubnet1'))]",
        "cmdDeleteNSG": "[concat('az network nsg delete -g ', resourceGroup().name, ' -n ', variables('networkSecurityGroupName') , ';')]",
        "cmdDeleteVNet": "[concat('az network vnet delete -g ', resourceGroup().name, ' -n ', variables('vNetName') , ';')]",
        "extraSubnetCount": "[if(empty(parameters('ExtraSubnetAddressRanges')), 0, length(parameters('ExtraSubnetAddressRanges')))]",
        "extraSubnets": {
            "copy": [
                {
                    "name": "iterations",
                    "count": "[variables('extraSubnetCount')]",
                    "input": {
                        "name": "[parameters('ExtraSubnetNames')[copyIndex('iterations')]]",
                        "properties": {
                            "addressPrefix": "[parameters('ExtraSubnetAddressRanges')[copyIndex('iterations')]]",
                            "networkSecurityGroup": {
                                "id": "[variables('networkSecurityGroupId')]"
                            }
                        }
                    }
                }
            ]
        },
        "ifCreateExtraSubnets": "[greater(variables('extraSubnetCount'), 0)]",
        "networkSecurityGroupId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
        "networkSecurityGroupName": "[concat(parameters('UniqueResourceNamePrefix'), '-network-security-group')]",
        "subnet1": {
            "name": "[variables('subnet1Name')]",
            "properties": {
                "addressPrefix": "[parameters('Subnet1AddressRange')]",
                "networkSecurityGroup": {
                    "id": "[variables('networkSecurityGroupId')]"
                },
                "serviceEndpoints": [
                    {
                        "service": "Microsoft.AzureCosmosDB",
                        "locations": ["*"]
                    },
                    {
                        "service": "Microsoft.Web",
                        "locations": ["*"]
                    }
                ]
            }
        },
        "subnet1Name": "[if(empty(parameters('Subnet1Name')), concat(variables('vNetName'), '-subnet1'), parameters('Subnet1Name'))]",
        "subnetIds": {
            "copy": [
                {
                    "name": "iterations",
                    "count": "[length(variables('subnets'))]",
                    "input": "[concat(variables('vnetID'), '/subnets/', variables('subnets')[copyIndex('iterations')].name)]"
                }
            ]
        },
        "subnetNames": {
            "copy": [
                {
                    "name": "iterations",
                    "count": "[length(variables('subnets'))]",
                    "input": "[variables('subnets')[copyIndex('iterations')].name]"
                }
            ]
        },
        "subnets": "[union(createArray(variables('subnet1')), variables('extraSubnets').iterations)]",
        "vNetAddressPrefix": "[parameters('VnetAddressSpace')]",
        "vNetName": "[concat(parameters('UniqueResourceNamePrefix'), '-virtual-network')]",
        "vnetID": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/virtualNetworks/', parameters('VnetName'))]"
    },
    "resources": [
        {
            "apiVersion": "2019-04-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('networkSecurityGroupName')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "AllowAllInbound",
                        "properties": {
                            "description": "Allow all in",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "AllowAllOutbound",
                        "properties": {
                            "description": "Allow all out",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 105,
                            "direction": "Outbound"
                        }
                    }
                ]
            },
            "type": "Microsoft.Network/networkSecurityGroups"
        },
        {
            "apiVersion": "2019-04-01",
            "dependsOn": ["[variables('networkSecurityGroupName')]"],
            "location": "[resourceGroup().location]",
            "name": "[variables('vNetName')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": ["[variables('vNetAddressPrefix')]"]
                },
                "Subnets": "[variables('subnets')]"
            },
            "type": "Microsoft.Network/virtualNetworks"
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "CmdDeassociateNSG",
            "condition": "[variables('ifCreateExtraSubnets')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/fortinet/fortigate-autoscale-azure/3.3.1-dev.15/templates/template_function.join_string_array.json"
                },
                "parameters": {
                    "InputString": {
                        "value": ""
                    },
                    "Delimiter": {
                        "value": ""
                    },
                    "StringArray": {
                        "value": "[variables('cmdDeassociateNSGFromExtraSubnets').iterations]"
                    }
                }
            },
            "subscriptionId": "[subscription().subscriptionId]",
            "resourceGroup": "[resourceGroup().name]"
        }
    ],
    "outputs": {
        "cmdDeleteAll": {
            "type": "String",
            "value": "[concat(variables('cmdDeleteAll'), if(variables('ifCreateExtraSubnets'), reference('CmdDeassociateNSG').outputs.outputString.value, ''), variables('cmdDeleteNSG'), variables('cmdDeleteVNet'))]"
        },
        "networkSecurityGroupName": {
            "type": "String",
            "value": "[variables('networkSecurityGroupName')]"
        },
        "subnet1Id": {
            "type": "String",
            "value": "[variables('subnetIds').iterations[0]]"
        },
        "subnet1Name": {
            "type": "String",
            "value": "[variables('subnetNames').iterations[0]]"
        },
        "subnetCount": {
            "type": "Int",
            "value": "[length(variables('subnets'))]"
        },
        "subnetIds": {
            "type": "Array",
            "value": "[variables('subnetIds').iterations]"
        },
        "subnetNames": {
            "type": "Array",
            "value": "[variables('subnetNames').iterations]"
        },
        "vnetID": {
            "type": "String",
            "value": "[variables('vnetID')]"
        },
        "vnetName": {
            "type": "String",
            "value": "[variables('vNetName')]"
        }
    }
}
