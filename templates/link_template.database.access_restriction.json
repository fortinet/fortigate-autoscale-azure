{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "3.6.0.0",
    "parameters": {
        "AllowAccessFromSubnetIds": {
            "type": "array"
        },
        "CommaSeparatedIPAddressString": {
            "type": "string"
        },
        "DatabaseAccountName": {
            "type": "String"
        }
    },
    "variables": {
        "virtualNetworkRules": {
            "copy": [
                {
                    "name": "iterations",
                    "count": "[length(parameters('AllowAccessFromSubnetIds'))]",
                    "input": {
                        "id": "[parameters('AllowAccessFromSubnetIds')[copyIndex('iterations')]]",
                        "ignoreMissingVNetServiceEndpoint": false
                    }
                }
            ]
        },
        "arrayIPAddresses": "[split(parameters('CommaSeparatedIPAddressString'), ',')]",
        "ipRules": {
            "copy": [
                {
                    "name": "iterations",
                    "count": "[length(variables('arrayIPAddresses'))]",
                    "input": {
                        "ipAddressOrRange": "[variables('arrayIPAddresses')[copyIndex('ipRules')]]"
                    }
                }
            ]
        }
    },
    "resources": [
        {
            "apiVersion": "2023-04-15",
            "type": "Microsoft.DocumentDb/databaseAccounts",
            "name": "[parameters('DatabaseAccountName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "databaseAccountOfferType": "Standard",
                "ipRules": "[variables('ipRules').iterations]",
                "isVirtualNetworkFilterEnabled": true,
                "virtualNetworkRules": "[variables('virtualNetworkRules').iterations]",
                "locations": [
                    {
                        "locationName": "[resourceGroup().location]"
                    }
                ]
            }
        }
    ],
    "outputs": {}
}
